<project>
	<extend>${basedir}/../project.xml</extend>
	<name>Channel Feed</name>
	<groupId>knowbout</groupId>
	<artifactId>responsetest</artifactId>
	<url>http://www.knowbout.tv/</url>
	<currentVersion>${responsetest.current}</currentVersion>
	<developers>
		<developer>
			<id>kadel</id>
			<name>Rich Kadel</name>
			<email>rich.kadel@knowbout.com</email>
		</developer>
	</developers>
	<dependencies>

		<dependency>
			<groupId>javax.activation</groupId>
			<artifactId>activation</artifactId>
			<version>1.1</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>javax.mail</groupId>
			<artifactId>mail</artifactId>
			<version>1.4</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.6.1</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>jaxen</groupId>
			<artifactId>jaxen</artifactId>
			<version>1.1</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
        <dependency>
            <groupId>hessian</groupId>
            <artifactId>hessian</artifactId>
            <version>3.0.20</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>epg-api</artifactId>
			<version>${epgapi.current}</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>cc4j</artifactId>
			<version>${cc4j.current}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>cc2nlp</artifactId>
			<version>${cc2nlp.current}</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.1</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.14</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-configuration</groupId>
			<artifactId>commons-configuration</artifactId>
			<version>1.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
        <dependency>
            <groupId>knowbout</groupId>
            <artifactId>libcc4j</artifactId>
			<type>so</type>
			<version>${cc4j.current}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
        <dependency>
            <groupId>knowbout</groupId>
            <artifactId>libzvbi</artifactId>
			<type>so</type>
			<version>${zvbi.current}</version>
            <properties>
                <war.bundle>true</war.bundle>
            </properties>
        </dependency>
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
		<resources>
			<resource>
				<directory>src/main/java</directory>
			</resource>
		</resources>
		<unitTest>
			<resources>
				<resource>
					<directory>src/test/java/resources</directory>
				</resource>
				<resource>
					<directory>src/main/webapp/WEB-INF/</directory>
				</resource>
				<!--
				<resource>
					<directory>src/webapp/WEB-INF/classes</directory>
					<includes>ehcache.xml</includes>
				</resource>
				-->
			</resources>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
	</build>
</project>
