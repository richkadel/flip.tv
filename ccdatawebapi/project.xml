<project>
	<extend>${basedir}/../project.xml</extend>
	<name>Closed Caption Data Web API</name>
	<groupId>knowbout</groupId>
	<artifactId>ccdatawebapi</artifactId>
	<url>http://www.appeligo.com/</url>
	<currentVersion>${ccdatawebapi.current}</currentVersion>
	<developers>
		<developer>
			<id>kadel</id>
			<name>Rich Kadel</name>
			<email>rich.kadel@appeligo.com</email>
		</developer>
	</developers>
	<dependencies>
		<dependency>
			<groupId>hessian</groupId>
			<artifactId>hessian</artifactId>
			<version>3.0.20</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
		<unitTest>
			<resources>
				<resource>
					<directory>src/test/java/resources</directory>
				</resource>
				<!--
				<resource>
				<directory>src/webapp/WEB-INF/</directory>
				</resource>
				<resource>
				<directory>src/webapp/WEB-INF/classes</directory>
				<includes>ehcache.xml</includes>
				</resource>
				-->
			</resources>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
		<resources>
			<resource>
				<directory>src/main/java</directory>
				<includes>
					<include>**/*.xml</include>
					<include>**/*.properties</include>
				</includes>
			</resource>
		</resources>
	</build>
</project>
