<project>
	<extend>${basedir}/../project.xml</extend>
	<name>Know'bout Keyword Listener API</name>
	<groupId>knowbout</groupId>
	<artifactId>keywordlistenerapi</artifactId>
	<url>http://www.knowbout.tv/</url>
	<currentVersion>${keywordlistenerapi.current}</currentVersion>
	<developers>
		<developer>
			<id>almilli</id>
			<name>David Almilli</name>
			<email>david.almilli@knowbout.com</email>
		</developer>
		<developer>
			<id>fear</id>
			<name>Jake Fear</name>
			<email>jake.fear@knowbout.com</email>
		</developer>
	</developers>
	<dependencies>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<unitTestSourceDirectory>src/main/test</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
	</build>
</project>
