<project>
	<extend>${basedir}/../project.xml</extend>
	<name>Appeligo Keyword Simulator</name>
	<groupId>knowbout</groupId>
	<artifactId>kwsim</artifactId>
	<url>http://www.appeligo.com/</url>
	<currentVersion>${kwsim.current}</currentVersion>
	<developers>
		<developer>
			<id>almilli</id>
			<name>David Almilli</name>
			<email>david.almilli@knowbout.com</email>
		</developer>
	</developers>
	<dependencies>
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>keywordlistenerapi</artifactId>
			<version>${keywordlistenerapi.current}</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>hessian</groupId>
			<artifactId>hessian</artifactId>
			<version>3.0.20</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<unitTestSourceDirectory>src/main/test</unitTestSourceDirectory>
		<unitTest>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
	</build>
</project>
