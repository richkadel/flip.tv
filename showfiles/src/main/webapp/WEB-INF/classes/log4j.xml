<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/'>
	
	<appender name="stdout" class="org.apache.log4j.ConsoleAppender">
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{HH:mm:ss,SSS} %5p [%-20c{1}] %m%n"/>
		</layout>
	</appender>
	
	<appender name="file" class="com.appeligo.logging.TomcatAwareRollingFileAppender">
		<param name="MaxFileSize"  value="10240KB"/>
		<param name="MaxBackupIndex" value="50"/>
		<param name="File" value="logs/showfiles.log"/>
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="%d{ISO8601} %-5p [%-c{1} -%X] - %m%n"/>
	   </layout>
	</appender>

	<category name="com.knowbout">
		<priority value="info"/>
	</category>
	
	<category name="com.appeligo">
		<priority value="info"/>
	</category>
	
	<category name="com.appeligo.showfiles.ShowFile">
		<priority value="warn"/>
	</category>
	
	<category name="org">
		<priority value="info"/>
	</category>
	
	<category name="com">
		<priority value="info"/>
	</category>

  <root> 
    <priority value ="debug" /> 
    <!--appender-ref ref="stdout" /--> 
    <appender-ref ref="file" /> 
  </root>
  
</log4j:configuration>
