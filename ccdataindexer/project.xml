<project>
	<extend>${basedir}/../project.xml</extend>
	<name>ccdataindexer</name>
	<groupId>appeligo</groupId>
	<artifactId>ccdataindexer</artifactId>
	<url>http://www.appeligo.com/</url>
	<currentVersion>${ccdataindexer.current}</currentVersion>
	<developers>
		<developer>
			<id>exline</id>
			<name>Chris Exline</name>
			<email>chris.exline@appeligo.com</email>
		</developer>
	</developers>
	<dependencies>
		<dependency>
			<groupId>lucene</groupId>
			<artifactId>lucene-core</artifactId>
			<version>2.1.0</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>lucene</groupId>
			<artifactId>lucene-spellchecker</artifactId>
			<version>2.1.0</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>			
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>epg-api</artifactId>
			<version>${epgapi.current}</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>	
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>configuration</artifactId>
			<version>${configuration.current}</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>luceneadapter</artifactId>
			<version>${luceneadapter.current}</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-configuration</groupId>
			<artifactId>commons-configuration</artifactId>
			<version>1.3</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>2.3</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-collections</groupId>
			<artifactId>commons-collections</artifactId>
			<version>3.2</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
	        <dependency>
        	    <groupId>hessian</groupId>
	            <artifactId>hessian</artifactId>
	            <version>3.0.20</version>
	            <properties>
	                <war.bundle>true</war.bundle>
	            </properties>
 	       </dependency>
       		<dependency>
			<groupId>dom4j</groupId>
			<artifactId>dom4j</artifactId>
			<version>1.6.1</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>

		<dependency>
			<groupId>jaxen</groupId>
			<artifactId>jaxen</artifactId>
			<version>1.1</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
 
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
		<resources>
			<resource>
				<directory>src/main/java</directory>
			</resource>
		</resources>
		<unitTest>
			<resources>
				<resource>
					<directory>src/test/java/resources</directory>
				</resource>
			</resources>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
	</build>
</project>
