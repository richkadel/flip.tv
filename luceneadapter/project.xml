<project>
	<extend>${basedir}/../project.xml</extend>
	<name>luceneadapter</name>
	<groupId>knowbout</groupId>
	<artifactId>luceneadapter</artifactId>
	<url>http://www.knowbout.tv/</url>
	<currentVersion>${luceneadapter.current}</currentVersion>
	<developers>
		<developer>
			<id>jfear</id>
			<name>Jake Fear</name>
			<email>jake.fear@appeligo.com</email>
		</developer>
	</developers>
	<dependencies>
		<dependency>
			<groupId>lucene</groupId>
			<artifactId>lucene-core</artifactId>
			<version>2.1.0</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>lucene</groupId>
			<artifactId>lucene-spellchecker</artifactId>
			<version>2.1.0</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>			
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>epg-api</artifactId>
			<version>${epgapi.current}</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>	
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>configuration</artifactId>
			<version>${configuration.current}</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-configuration</groupId>
			<artifactId>commons-configuration</artifactId>
			<version>1.3</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>knowbout</groupId>
			<artifactId>keywordlistenerapi</artifactId>
			<version>${keywordlistenerapi.current}</version>
			<type>jar</type>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.0.4</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.13</version>
			<properties>
				<war.bundle>true</war.bundle>
			</properties>
		</dependency>
	</dependencies>
	<build>
		<sourceDirectory>src/main/java</sourceDirectory>
		<unitTestSourceDirectory>src/test/java</unitTestSourceDirectory>
		<resources>
			<resource>
				<directory>src/main/java</directory>
			</resource>
		</resources>
		<unitTest>
			<resources>
				<resource>
					<directory>src/test/java/resources</directory>
				</resource>
			</resources>
			<includes>
				<include>**/*Test.java</include>
			</includes>
		</unitTest>
	</build>
</project>
